@using Core.Enums
@model SibersTestTask.Models.Projects.AddProjectViewModel

@{
ViewBag.Title = "Add new project";
Layout = "_Layout";
}

<h2>Add a new project</h2>

<form asp-action="Add">
    <div class="form-group">
        <label asp-for="Form.Name" class="form-label">Name</label>
        <input type="text" asp-for="Form.Name" class="form-control"/>
        <span asp-validation-for="Form.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Form.StartDate" class="form-label">Start date</label>
        <input type="date" asp-for="Form.StartDate" class="form-control"/>
        <span asp-validation-for="Form.StartDate" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Form.EndDate" class="form-label">End date</label>
        <input type="date" asp-for="Form.EndDate" class="form-control"/>
        <span asp-validation-for="Form.EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Form.Priority" class="form-label">Priority</label>
        <select asp-for="Form.Priority" class="form-control"
                asp-items="Html.GetEnumSelectList<ProjectPriorityEnum>()">
        </select>
        <span asp-validation-for="Form.Priority" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Form.Client" class="form-label">Client name</label>
        <input type="text" asp-for="Form.Client" class="form-control"/>
        <span asp-validation-for="Form.Client" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Form.ContractorCompanyName" class="form-label">Executive company name</label>
        <input type="text" asp-for="Form.ContractorCompanyName" class="form-control"/>
        <span asp-validation-for="Form.ContractorCompanyName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Form.ProjectEmployeeIds" class="form-label">Project employees</label>
        <select asp-for="Form.ProjectEmployeeIds" class="form-control" id="project-employees-select-list"
                asp-items="Model.EmployeesSelectListItems">
        </select>
        <span asp-validation-for="Form.ProjectEmployeeIds" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Form.ProjectLeadId" class="form-label">Project team lead</label>
        <select asp-for="Form.ProjectLeadId" class="form-control"
                asp-items="Model.EmployeesSelectListItems">
        </select>
        <span asp-validation-for="Form.ProjectLeadId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function() {
            $('#project-employees-select-list').select2();
        });
    </script>
}
